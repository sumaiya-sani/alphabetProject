<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

    android:background="@color/bage"
        tools:context=".StoryActivity">
    <ScrollView
        android:layout_marginTop="10dp"
        android:id="@+id/scroll1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/englishRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_margin="8dp"
                android:layout_marginStart="8dp"


 />

        </RelativeLayout>

    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scroll1"
        android:id="@+id/thaiSection"
       android:layout_marginLeft="10dp"
        android:text="THAI STORY"
        />

    <ScrollView
        android:id="@+id/scroll2"
        android:layout_below="@+id/thaiSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/thaiRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_margin="8dp"
                android:layout_marginStart="8dp"

                android:layout_marginEnd="363dp"
                />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>